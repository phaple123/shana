<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans>
        <form-bean name="loginForm" type="com.takumi.login.LoginForm"></form-bean>
    </form-beans>
    <action-mappings>
        <action path="/login" name="loginForm" type="com.takumi.login.LoginAction">
            <forward name="suc" path="/welcome.jsp"></forward>
        </action>
        <action path="/user" type="com.takumi.user.UserAction">
            <forward name="suc" path="/welcome.jsp"></forward>
        </action>
    </action-mappings>
</struts-config>